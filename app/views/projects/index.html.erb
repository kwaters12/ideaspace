<h1>Idea Space Project Management Tool</h1>
<%= link_to "New Project", new_project_path, class: "btn btn-default" %>
<hr>
<% @projects.each do |project| %>
  <p><%= link_to "#{project.title}", project %></p>
  <p><%= project.body %></p>
  <%= link_to "Delete Project", project, method: :delete, data: {confirm: "Are you sure you want to delete this project?"}, class: "btn btn-default" %>
  <%= link_to "Edit Project", edit_project_path(project), class: "btn btn-default" %>
  <hr>
<% end %>
